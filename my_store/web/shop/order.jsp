<%@ page contentType="text/html;charset=UTF-8" language="java" %><%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xmlns="http://www.w3.org/1999/xhtml"><head>    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>    <title>我的订单</title></head><body><%    Object user = session.getAttribute("user");    if (null == user) {        response.sendRedirect(request.getContextPath() + "/shop/Login.jsp");    }%><style>    .order {        float: left;        width: 890px;        background-color: #FFF;        margin: 20px 20px 30px 30px;        border: rgba(235, 235, 235, 0.22) 1px solid;        border-radius: 8px;        -webkit-box-shadow: 0 0 5px #e0e0e0;        -moz-box-shadow: 0 0 5px #e0e0e0;        box-shadow: 0 0 5px #e0e0e0;    }    .order_title {        float: left;        width: 100%;        height: 40px;        line-height: 40px;        text-align: left;        background-color: #eeeeee;    }    .order_num {        text-align: center;        line-height: 100px;        float: left;        width: 100%;        border-top: 1px solid #CCCCCC;        border-bottom: 1px solid #CCCCCC;        border-right: 1px solid #CCCCCC;    }    .order_num span {        color: red;        font-size: 17px;    }    .order_par {        float: left;        margin-left: 15px    }    .order_in {        line-height: 100px;        text-align: center;        height: 100px;        width: 80%;        float: left;        border-top: 1px solid #CCCCCC;        border-left: 1px solid #CCCCCC;        border-right: 1px solid #CCCCCC;    }    .orderInfo {        float: left;        width: 25%;        text-align: center;        height: 100%;    }    .orderInfo img {        margin-top: 20px;        width: 70px;        height: 70px;    }</style><!--Begin Header Begin--><%@include file="common/header.jsp" %><%@include file="common/search.jsp" %><!--End Header End--><!--Begin Menu Begin--><%--<%@include file="common/menu.jsp" %>--%><!--End Header End--><div class="i_bg bg_color">    <!--Begin 用户中心 Begin -->    <div class="m_content">        <%@include file="common/left.jsp" %>        <div id="common_jsp">            <div class="m_right">                <c:forEach items="${page.data}" var="ordervos">                    <div class="order">                        <div class="order_title">                            <div class="order_par"><strong>${ordervos.order.o_createtime}</strong>                            </div>                            <div class="order_par">                                <span>订单号:</span>${ordervos.order.o_serialnumber}                            </div>                            <div class="order_par">                                <span>地址:</span><span>${ordervos.order.a_area}${ordervos.order.a_address}</span>                            </div>                            <div class="order_par">                                <span>&nbsp;&nbsp;${ordervos.order.a_username}</span><span>(收)</span>                            </div>                            <div class="order_par">                                <span></span><span>${ordervos.order.a_phone}</span>                            </div>                        </div>                        <div class="order_num">                            <c:forEach items="${ordervos.details}" var="orderinfo">                                <div class="order_in">                                    <div class="orderInfo"><img src="${ctx}/shop/images/${orderinfo.p_filename}"/></div>                                    <div class="orderInfo"><a                                            href="${ctx}/product?action=productInfo&p_id=${orderinfo.p_id}"><strong>${orderinfo.p_name}</strong></a>                                    </div>                                    <div class="orderInfo">小计:<span>￥${orderinfo.d_cost}</span></div>                                    <div class="orderInfo">数量:${orderinfo.d_quantity}</div>                                </div>                            </c:forEach>                            <strong>合计:</strong>                            <span>￥${ordervos.order.o_cost}</span>                        </div>                    </div>                </c:forEach>            </div>        </div>    </div></div><div id="demo">    <div id="page" class="page_div">1</div></div><!--End 用户中心 End--><!--Begin Footer Begin --><%@include file="common/footer.jsp" %><script type="text/javascript">    $("#left_Nav").hide();    $(".i_car").hide();</script><script type="text/javascript" src="${ctx}/shop/js/n_nav.js"></script><script type="text/javascript" src="${ctx}/shop/js/jquery-1.11.1.min_044d0927.js"></script><script type="text/javascript" src="${ctx}/shop/js/paging.js"></script><script type="text/javascript">    var Counts =${page.allCounts};    $("#page").paging({        pageNo: ${page.currPaNo},        totalPage: ${page.pageCounts},        totalSize: ${page.allCounts},        callback: function (num) {            $(window).attr('location', '${pageContext.request.contextPath}/product?action=getOrderVo&uid=${user.u_id}&currPaNo=' + num);        }    });</script><!--End Footer End --></div></body><!--[if IE 6]><![endif]--></html>